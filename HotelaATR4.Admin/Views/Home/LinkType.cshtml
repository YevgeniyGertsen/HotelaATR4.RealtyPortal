@model List<LinkType>

<table class="table table-striped table-bordered table-advance table-hover">
    <thead>
        <tr>
            <th>
                <i class="fa fa-briefcase"></i> Id
            </th>
            <th class="hidden-xs">
                <i class="fa fa-question"></i> CreatedAt
            </th>
            <th>
                <i class="fa fa-bookmark"></i> CreatedBy
            </th>
            <th>
                <i class="fa fa-bookmark"></i> Name
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model==null || Model.Count <=0)
        {
            <tr>
                <td colspan="5">Данных нет!</td>
            </tr>
        }
        else
        {
            foreach (LinkType item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td class="hidden-xs">
                        @item.CreatedAt
                    </td>
                    <td>
                        @item.CreatedBy
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td></td>
                </tr>
            }
        }
        
    </tbody>
</table>